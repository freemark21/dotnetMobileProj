<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dotnetMobileProj.PickColorPage1"
             Title="PickColorPage1">
    <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <BoxView x:Name="bxvColorPicker"></BoxView>
        <Image x:Name="imgColorPicker" Source="ColorPicker.png"></Image>
        <Picker x:Name="pickerColorPicker" IsVisible="False" SelectedIndexChanged="pickerColorPicker_SelectedIndexChanged"></Picker>
    </StackLayout>

</ContentPage>

