<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dotnetMobileProj.PickColorPage1"
             Title="PickColorPage1">
    <StackLayout>
        <BoxView x:Name="bxvColorPicker" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"></BoxView>
        <Picker x:Name="pickerColorPicker" IsVisible="True" Title="Pick A Color" TextColor="White" SelectedIndexChanged="pickerColorPicker_SelectedIndexChanged"></Picker>
    </StackLayout>
</ContentPage>
