<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:dotnetMobileProj"
             x:Class="dotnetMobileProj.MainPage">

    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="Center" BackgroundColor="Black">
        <Image></Image>
        <Label x:Name="lblWelcome" Text="Tap to get started picking your colors!" FontSize="Large">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="WelcomeLabelTapped"/>
            </Label.GestureRecognizers>
        </Label>
    </StackLayout>

</ContentPage>